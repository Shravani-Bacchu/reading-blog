---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---
<BaseLayout>
    <h1>{frontmatter.title} </h1>
<div class="grid">
<img src={frontmatter.image.url} width="450"alt={frontmatter.image.alt} />
  <div>
<p>Book Title: {frontmatter.book_title} - {frontmatter.book_author}</p>
<div class="tags">
      {frontmatter.tags.map((tag: string) => (
        <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
      ))}
    </div>
<p>Book Release Date: {frontmatter.book_pub_date.toString().slice(0,10)}</p>
<p><b>Book synopsis:</b>{frontmatter.synopsis}</p>
<p>My Rating: {frontmatter.book_rating}</p>
  </div>
</div>
<p><em> Favourite Quote: "{frontmatter.favourite_quote}"</em></p>
<slot />
</BaseLayout>
<style>
  a {
    color: #0A2239;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #659157;
  }
</style>